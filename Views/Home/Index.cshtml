    <style>

/* ---------------------------
   Section Title
---------------------------- */
.section-title {
  color: #f90; /* Match your brand orange */
  font-size: 2rem;
  font-weight: bold;
}

/* ---------------------------
   Country Caption
---------------------------- */
.country-name {
  font-weight: 500;
  font-size: 1rem;
  color: #333;
  transition: transform 0.3s ease, color 0.3s ease;
}

.swiper-slide:hover .country-name {
  transform: scale(1.05);
  color: #f90;
}

/* Responsive font size */
@@media (max-width: 576px) {
  .country-name {
    font-size: 0.9rem;
  }
}
@@media (min-width: 1200px) {
  .swiper-button-prev,
  .swiper-button-next {
    width: 60px;
    height: 60px;
  }

  .swiper-button-prev ,
  .swiper-button-next  {
    color: #e79c00;
    font-size: 28px;
  }
}


/* ---------------------------
   Flag Styling
---------------------------- */
.swiper-slide img {
    
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.4s ease-in-out;
  opacity: 0; /* for fade-in */
}

/* Fade-in on visibility */
.swiper-slide-visible img {
  opacity: 1;
}

/* Slight zoom effect on hover */
.swiper-slide:hover img {
  transform: scale(1.03);
}

/* Highlight active flag */
.swiper-slide-active img {
  transform: scale(1.08);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
}

/* ---------------------------
   Swiper Pagination Bullets
---------------------------- */
.swiper-pagination-bullet {
  background: #ccc;
  opacity: 1;
  width: 10px;
  height: 10px;
  margin: 0 4px;
  transition: background 0.3s ease;
}

.swiper-pagination-bullet-active {
  background: #f90;
}

/* ---------------------------
   Navigation Arrows
---------------------------- */
/* === Swiper Navigation Buttons === */
.swiper-button-prev,
.swiper-button-next {
  width: 48px;
  height: 48px;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.3s ease;
}

/* Position tweaks to prevent touching edges */
.swiper-button-prev {
  left: 10px;
}
.swiper-button-next {
  right: 10px;
}

/* Hover effect */
.swiper-button-prev:hover,
.swiper-button-next:hover {
  background-color: #333;
  transform: scale(1.1);
}

/* Ionicons inside the buttons */
.swiper-button-prev,
.swiper-button-next {
  font-size: 24px;
  color: #e79c00;
  transition: color 0.3s ease;
}

/* Icon color on hover */
.swiper-button-prev:hover ion-icon,
.swiper-button-next:hover ion-icon {
  color: white;
}

/* ---------------------------
   Optional: Grayscale effect until hover (modern trend)
---------------------------- */

.swiper-slide img {
  filter: grayscale(20%);
}
.swiper-slide:hover img {
  filter: grayscale(0%);
}


    </style>
}



