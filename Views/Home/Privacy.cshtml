@model PrivacyViewModel

@{
    ViewData["Title"] = "Privacy Policy";
}

@section Css{
<link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">
<style>
    /* Privacy Policy Page - Professional Design */
    body {
        background: #f8f9fa;
    }

    /* Hero Section */
    .privacy-hero {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        padding: 100px 0 80px;
        position: relative;
        overflow: hidden;
        margin-bottom: 60px;
    }

    .privacy-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(90deg, #e79c00 0%, #ff9900 50%, #e79c00 100%);
        z-index: 10;
    }

    .privacy-hero::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 800px;
        height: 800px;
        background: radial-gradient(circle, rgba(231, 156, 0, 0.1) 0%, transparent 70%);
        pointer-events: none;
    }

    .privacy-hero h1 {
        font-size: 3.5rem;
        font-weight: 900;
        color: white;
        text-transform: uppercase;
        letter-spacing: 3px;
        margin-bottom: 25px;
        text-shadow: 0 4px 20px rgba(231, 156, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .privacy-hero h1::after {
        content: '';
        display: block;
        width: 150px;
        height: 5px;
        background: linear-gradient(90deg, #e79c00, #ff9900);
        margin: 25px auto 0;
        border-radius: 3px;
    }

    .privacy-hero p {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.2rem;
        font-weight: 600;
        max-width: 800px;
        margin: 0 auto;
        line-height: 1.8;
        position: relative;
        z-index: 1;
    }

    /* Section Cards */
    .privacy-section {
        background: white;
        border-radius: 20px;
        padding: 45px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        border: 3px solid #f0f0f0;
        position: relative;
        transition: all 0.3s ease;
    }

    .privacy-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: linear-gradient(90deg, #e79c00, #ff9900);
        border-radius: 20px 20px 0 0;
    }

    .privacy-section:hover {
        box-shadow: 0 15px 40px rgba(231, 156, 0, 0.15);
        border-color: #e79c00;
        transform: translateY(-5px);
    }

    .privacy-section h4 {
        color: #1a1a1a;
        font-weight: 900;
        font-size: 1.8rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 3px solid #f0f0f0;
        position: relative;
    }

    .privacy-section h4::before {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #e79c00, #ff9900);
    }

    .privacy-section p {
        color: #666;
        font-size: 1.05rem;
        line-height: 1.8;
        margin-bottom: 20px;
    }

    /* List Items */
    .privacy-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .privacy-list li {
        padding: 15px 20px;
        margin-bottom: 12px;
        background: #f8f9fa;
        border-radius: 12px;
        border-left: 4px solid #e79c00;
        transition: all 0.3s ease;
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }

    .privacy-list li:hover {
        background: white;
        border-left-width: 6px;
        transform: translateX(8px);
        box-shadow: 0 4px 12px rgba(231, 156, 0, 0.15);
    }

    .privacy-list li i {
        color: #e79c00;
        font-size: 1.2rem;
        margin-top: 3px;
        flex-shrink: 0;
    }

    .privacy-list li span {
        color: #333;
        font-weight: 600;
        font-size: 1rem;
        line-height: 1.6;
    }

    /* Icon Variants */
    .icon-check {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon-lock {
        background: linear-gradient(135deg, #dc3545, #fd7e14);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon-share {
        background: linear-gradient(135deg, #007bff, #6610f2);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon-user {
        background: linear-gradient(135deg, #e79c00, #ff9900);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    /* Contact Section */
    .contact-section {
        background: linear-gradient(135deg, #e79c00, #ff9900);
        border-radius: 20px;
        padding: 60px 45px;
        margin: 60px 0;
        box-shadow: 0 15px 40px rgba(231, 156, 0, 0.3);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .contact-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(90deg, white, rgba(255,255,255,0.5), white);
    }

    .contact-section h4 {
        color: white;
        font-weight: 900;
        font-size: 2.2rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 20px;
    }

    .contact-section p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 35px;
    }

    .contact-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: inline-block;
        text-align: left;
    }

    .contact-list li {
        padding: 15px 25px;
        margin-bottom: 15px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .contact-list li:hover {
        background: rgba(255, 255, 255, 0.25);
        border-color: white;
        transform: translateY(-3px);
    }

    .contact-list li i {
        color: white;
        font-size: 1.3rem;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-list li a {
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .contact-list li a:hover {
        text-decoration: underline;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .contact-list li span {
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .privacy-hero h1 {
            font-size: 2.2rem;
        }

        .privacy-hero p {
            font-size: 1rem;
        }

        .privacy-section {
            padding: 30px 20px;
        }

        .privacy-section h4 {
            font-size: 1.4rem;
        }

        .contact-section {
            padding: 40px 25px;
        }

        .contact-section h4 {
            font-size: 1.6rem;
        }

        .contact-list {
            width: 100%;
        }
    }

    /* Animation */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .privacy-section,
    .contact-section {
        animation: fadeInUp 0.6s ease forwards;
    }
</style>
}

<!-- Hero Section -->
<section class="privacy-hero text-center" data-aos="fade-down">
    <div class="container">
        <h1>@Model.Title</h1>
        <p>@Html.Raw(@Model.HeroDescription)</p>
    </div>
</section>

<div class="container">
    <!-- Section 1: Information We Collect -->
    <div class="privacy-section" data-aos="fade-up">
        <h4>
            <i class="fas fa-database me-3"></i>@Model.InfoCollectionTitle
        </h4>
        <ul class="privacy-list">
            <li>
                <div class="icon-check">
                    <i class="fa fa-check"></i>
                </div>
                <span>@Html.Raw(@Model.InfoCollectionUsage)</span>
            </li>
            <li>
                <div class="icon-check">
                    <i class="fa fa-check"></i>
                </div>
                <span>@Html.Raw(@Model.InfoCollectionPersonal)</span>
            </li>
            <li>
                <div class="icon-check">
                    <i class="fa fa-check"></i>
                </div>
                <span>@Html.Raw(@Model.InfoCollectionPayment)</span>
            </li>
            <li>
                <div class="icon-check">
                    <i class="fa fa-check"></i>
                </div>
                <span>@Html.Raw(@Model.InfoCollectionCookies)</span>
            </li>
        </ul>
    </div>

    <!-- Section 2: How We Use Your Information -->
    <div class="privacy-section" data-aos="fade-up" data-aos-delay="100">
        <h4>
            <i class="fas fa-cogs me-3"></i>@Model.UsageTitle
        </h4>
        <p>@Model.UsageIntro</p>
        <ul class="privacy-list">
            <li>
                <i class="fa fa-arrow-right"></i>
                <span>@Model.UsagePurpose1</span>
            </li>
            <li>
                <i class="fa fa-arrow-right"></i>
                <span>@Model.UsagePurpose2</span>
            </li>
            <li>
                <i class="fa fa-arrow-right"></i>
                <span>@Model.UsagePurpose3</span>
            </li>
        </ul>
    </div>

    <!-- Section 3: How We Protect Your Data -->
    <div class="privacy-section" data-aos="fade-up" data-aos-delay="200">
        <h4>
            <i class="fas fa-shield-alt me-3"></i>@Model.ProtectionTitle
        </h4>
        <p>@Model.ProtectionIntro</p>
        <ul class="privacy-list">
            <li>
                <div class="icon-lock">
                    <i class="fa fa-lock"></i>
                </div>
                <span>@Model.ProtectionSSL</span>
            </li>
            <li>
                <div class="icon-lock">
                    <i class="fa fa-lock"></i>
                </div>
                <span>@Model.ProtectionFirewalls</span>
            </li>
            <li>
                <div class="icon-lock">
                    <i class="fa fa-lock"></i>
                </div>
                <span>@Model.ProtectionAccess</span>
            </li>
        </ul>
    </div>

    <!-- Section 4: Sharing Your Information -->
    <div class="privacy-section" data-aos="fade-up" data-aos-delay="300">
        <h4>
            <i class="fas fa-share-alt me-3"></i>@Model.SharingTitle
        </h4>
        <p>@Model.SharingIntro</p>
        <ul class="privacy-list">
            <li>
                <div class="icon-share">
                    <i class="fa fa-share"></i>
                </div>
                <span>@Model.SharingThirdParty</span>
            </li>
            <li>
                <div class="icon-share">
                    <i class="fa fa-share"></i>
                </div>
                <span>@Model.SharingLegal</span>
            </li>
        </ul>
    </div>

    <!-- Section 5: Your Rights -->
    <div class="privacy-section" data-aos="fade-up" data-aos-delay="400">
        <h4>
            <i class="fas fa-user-shield me-3"></i>@Model.RightsTitle
        </h4>
        <ul class="privacy-list">
            <li>
                <div class="icon-user">
                    <i class="fa fa-user-check"></i>
                </div>
                <span>@Model.RightsAccess</span>
            </li>
            <li>
                <div class="icon-user">
                    <i class="fa fa-user-check"></i>
                </div>
                <span>@Model.RightsDelete</span>
            </li>
            <li>
                <div class="icon-user">
                    <i class="fa fa-user-check"></i>
                </div>
                <span>@Model.RightsOptOut</span>
            </li>
        </ul>
    </div>

    <!-- Contact Us -->
    <div class="contact-section" data-aos="zoom-in" data-aos-delay="500">
        <h4>
            <i class="fas fa-phone-alt me-3"></i>@Model.ContactTitle
        </h4>
        <p>@Model.ContactQuestion</p>
        <ul class="contact-list">
            <li>
                <i class="fa fa-envelope"></i>
                <span style="user-select: none;">@Model.ContactEmail</span>
                <br><small class="text-muted">(@(Model.UseContactFormText ?? "Please use our contact form"))</small>
            </li>
            <li>
                <i class="fa fa-phone"></i>
                <span>@Model.ContactPhone</span>
            </li>
            <li>
                <i class="fa fa-map-marker-alt"></i>
                <span>@Model.ContactAddress</span>
            </li>
        </ul>
    </div>
</div>

<!-- AOS Initialization -->
@section Scripts{
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,
        once: true,
        offset: 100
    });
</script>
}
