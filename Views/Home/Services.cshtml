@model Alpha.Models.ServicesViewModel
    
@{
    ViewData["Title"] = "Our Services";
}
@section Css{
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">

    <style>
        /* Services Page - Professional Styling */
        body {
            background: #f8f9fa;
        }

        /* Hero Section */
        .services-hero {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .services-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #e79c00 0%, #ff9900 50%, #e79c00 100%);
            z-index: 10;
        }

        .services-hero h1 {
            font-size: 3.5rem;
            font-weight: 900;
            color: #1a1a1a;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 20px;
            position: relative;
        }

        .services-hero h1::after {
            content: '';
            display: block;
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #e79c00, #ff9900);
            margin: 20px auto 0;
            border-radius: 2px;
        }

        .services-hero .lead {
            font-size: 1.2rem;
            color: #666;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.8;
        }

        /* Sidebar Styling */
        .sidebar-section {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            border: 2px solid #f0f0f0;
            position: sticky;
            top: 20px;
        }

        .sidebar-section h4 {
            color: #e79c00;
            font-weight: 800;
            font-size: 1.5rem;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .sidebar-section h5 {
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .sidebar-section .form-label {
            color: #666;
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        .sidebar-section .form-control,
        .sidebar-section .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .sidebar-section .form-control:focus,
        .sidebar-section .form-select:focus {
            border-color: #e79c00;
            box-shadow: 0 0 0 0.2rem rgba(231, 156, 0, 0.15);
        }

        .btn-catalog {
            background: linear-gradient(135deg, #e79c00, #ff9900);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 14px 20px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(231, 156, 0, 0.3);
        }

        .btn-catalog:hover {
            background: linear-gradient(135deg, #ff9900, #e79c00);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(231, 156, 0, 0.4);
        }

        .btn-apply-filters {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 14px 20px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }

        .btn-apply-filters:hover {
            background: linear-gradient(135deg, #20c997, #28a745);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(40, 167, 69, 0.4);
        }

        /* Products Section Header */
        .products-header {
            background: white;
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 35px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            border-left: 5px solid #e79c00;
        }

        .products-header h4 {
            color: #e79c00;
            font-weight: 900;
            font-size: 2rem;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Product Cards - Awesome ViewComponent Style */
        .product-card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            background: #fff;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(231, 156, 0, 0.3);
        }

        .product-image-wrapper {
            position: relative;
            overflow: hidden;
            height: 280px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .product-card img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.6s ease;
        }

        .product-card:hover img {
            transform: scale(1.1);
        }

        .product-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(231, 156, 0, 0.95);
            color: #fff;
            padding: 8px 16px;
            border-radius: 25px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .product-card-body {
            padding: 25px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .product-card-title {
            color: #e79c00;
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .product-brand {
            color: #666;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .product-brand i {
            color: #e79c00;
        }

        .product-description {
            color: #777;
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 20px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .specs-table {
            margin-top: auto;
            border-collapse: separate;
            border-spacing: 0;
            overflow: hidden;
            border-radius: 10px;
            border: 2px solid #e79c00;
        }

        .specs-table tr:first-child td:first-child {
            border-top-left-radius: 8px;
        }

        .specs-table tr:first-child td:last-child {
            border-top-right-radius: 8px;
        }

        .specs-table tr:last-child td:first-child {
            border-bottom-left-radius: 8px;
        }

        .specs-table tr:last-child td:last-child {
            border-bottom-right-radius: 8px;
        }

        .specs-table td {
            padding: 12px 10px;
            font-size: 0.85rem;
            font-weight: 600;
            border: 1px solid #e8e8e8;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            color: #333;
            text-align: center;
            transition: all 0.3s ease;
        }

        .specs-table td:hover {
            background: linear-gradient(135deg, #fff9e6 0%, #ffe6b3 100%);
            color: #e79c00;
            transform: scale(1.05);
        }

        .specs-table tr:nth-child(odd) td {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        }

        .product-card-footer {
            padding: 15px 25px;
            background: linear-gradient(135deg, #e79c00 0%, #ff9900 100%);
            color: #fff;
            font-weight: 700;
            text-align: center;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .product-card-footer i {
            font-size: 1.1rem;
        }

        /* No Products Message */
        .no-products {
            background: white;
            border-radius: 16px;
            padding: 60px 40px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        }

        .no-products h4 {
            color: #666;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .no-products i {
            font-size: 4rem;
            color: #e79c00;
            margin-bottom: 20px;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .product-card {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

        .product-card:nth-child(1) { animation-delay: 0.1s; }
        .product-card:nth-child(2) { animation-delay: 0.2s; }
        .product-card:nth-child(3) { animation-delay: 0.3s; }
        .product-card:nth-child(4) { animation-delay: 0.4s; }
        .product-card:nth-child(5) { animation-delay: 0.5s; }
        .product-card:nth-child(6) { animation-delay: 0.6s; }

        /* Responsive */
        @@media (max-width: 768px) {
            .services-hero h1 {
                font-size: 2.5rem;
            }

            .services-hero .lead {
                font-size: 1.1rem;
            }

            .sidebar-section {
                position: static;
                margin-bottom: 30px;
            }

            .products-header h4 {
                font-size: 1.6rem;
            }

            .product-card-title {
                font-size: 1.2rem;
            }
        }
    </style>
}

<!-- Hero Section -->
<section class="services-hero text-center" data-aos="fade-down">
    <div class="container">
        <h1>@Model.Services_Title</h1>
        <p class="lead">
           @Model.Services_HeroDescription
        </p>
    </div>
</section>

<!-- Sidebar and Content Layout -->
<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <aside class="col-lg-3 mb-4" data-aos="fade-right">
            <div class="sidebar-section">
                <h4>@Model.Services_CatalogFilterTitle</h4>
                
                <!-- PDF Catalog -->
                <div class="mb-4">
                    <span
                        class="d-inline-block w-100"
                        data-bs-toggle="popover"
                        data-bs-trigger="hover focus"
                        data-bs-placement="top"
                        data-bs-html="true"
                        data-bs-content="
                        <div class='d-flex align-items-center'>
                            <div class='spinner-border spinner-border-sm me-2' role='status'></div>
                            <span>Loading…</span>
                        </div>
                        ">
                        <a href="#"
                           class="btn btn-catalog w-100 disabled"
                           tabindex="0"
                           role="button"
                           aria-disabled="true">
                            <i class="fa fa-file-pdf me-2"></i> @Model.Services_ViewCatalogButton
                        </a>
                    </span>
                </div>

                <!-- Product Filters -->
                <h5 class="mt-4">@Model.Services_FilterProductsTitle</h5>
                <form method="get" asp-action="Services" id="filterForm" class="mt-3">
                    <!-- Category Dropdown -->
                    <div class="mb-3">
                        <label class="form-label">@Model.Services_CategoryLabel</label>
                        <select name="category" class="form-select" onchange="this.form.submit();">
                            <option value="">@Model.Services_CategoryLabel</option>
                            @if (Model.Categories != null)
                            {
                                foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Url" selected="@(ViewBag.SelectedCategory == category.Url)">
                                        @category.Name
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Brand Filter -->
                    <div class="mb-3">
                        <label class="form-label">@Model.Services_BrandLabel</label>
                        <input type="text" name="brand" class="form-control" placeholder="@Model.Services_BrandLabel" value="@ViewBag.Brand" />
                    </div>

                    <!-- Search Box -->
                    <div class="mb-3">
                        <label class="form-label">@Model.Services_SearchProductLabel</label>
                        <input type="text" name="search" class="form-control" placeholder="@Model.Services_SearchProductLabel" value="@ViewBag.Search" />
                    </div>

                    <button type="submit" class="btn btn-apply-filters w-100">@Model.Services_ApplyFiltersButton</button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="col-lg-9" data-aos="fade-up">
            <div class="products-header">
                <h4>@Model.Services_OurProductsTitle</h4>
            </div>

            @if (Model != null && Model.Products.Any())
            {
                <div class="row g-4">
                    @foreach (var product in Model.Products)
                    {
                            string? culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
                            string? slug = product?.Url?.ToLower() ?? "urun";
                            var productRoute = Alpha.Services.RouteTranslationService.GetRoute("product", culture);
                            var productUrl = $"/{culture}/{productRoute}/{product!.ProductId}/{slug}";
                            string imageUrl = (product?.ProductImages != null && product.ProductImages.Any())
                                ? product.ProductImages.FirstOrDefault()?.Image?.ImageUrl ?? "/img/default-image.jpg"
                                : "/img/default-image.jpg";

                        <div class="col-lg-4 col-md-6">
                            <a href="@productUrl" class="text-decoration-none">
                                <article class="product-card">
                                    <div class="product-image-wrapper">
                                        <img src="@($"{imageUrl}?v={DateTime.UtcNow.Ticks}")" 
                                             alt="@(string.IsNullOrWhiteSpace(product?.Name) ? "Safety Shoe" : product.Name)" 
                                             loading="lazy"
                                             onerror="this.onerror=null;this.src='https://via.placeholder.com/600x400?text=Image+Unavailable';">
                                        <span class="product-badge">
                                            <i class="fas fa-shield-alt"></i> SAFETY
                                        </span>
                                    </div>
                                    
                                    <div class="product-card-body">
                                        <h5 class="product-card-title">@(string.IsNullOrWhiteSpace(product?.Name) ? "Safety Shoe" : product.Name)</h5>
                                        
                                        <div class="product-brand">
                                            <i class="fas fa-certificate"></i>
                                            <span>@(string.IsNullOrWhiteSpace(product?.Brand) ? "Alpha" : product.Brand)</span>
                                        </div>

                                        <p class="product-description">
                                            @(string.IsNullOrWhiteSpace(product?.Description) ? "Premium safety footwear designed for maximum protection and comfort." : product.Description)
                                        </p>

                                        <table class="specs-table w-100">
                                            <tbody>
                                                <tr>
                                                    <td><i class="fas fa-barcode"></i> @(product != null ? product.BodyNo.ToString() : "N/A")</td>
                                                    <td><i class="fas fa-tag"></i> @(string.IsNullOrWhiteSpace(product?.Model) ? "N/A" : product.Model)</td>
                                                </tr>
                                                <tr>
                                                    <td><i class="fas fa-shield-alt"></i> @(string.IsNullOrWhiteSpace(product?.Standard) ? "N/A" : product.Standard)</td>
                                                    <td><i class="fas fa-ruler"></i> @(string.IsNullOrWhiteSpace(product?.Size) ? "N/A" : product.Size)</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="product-card-footer">
                                        <i class="fas fa-info-circle"></i>
                                        <span>@Model.button</span>
                                    </div>
                                </article>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-products">
                    <i class="fas fa-box-open"></i>
                    <h4>@Model?.Services_NoProductsMessage</h4>
                </div>
            }
        </div>
    </div>
</div>

<!-- Include AOS Script -->
@section Scripts {
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({
      duration: 1000,
      once: true,
      easing: 'ease-in-out'
    });
  </script>

  <!-- jQuery zaten varsa, Popper + Bootstrap bundle'ı alt alta değil tek dosya olarak çağırın -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" 
    crossorigin="anonymous"></script>

  <script>
    $(function () {
      // Popover’ları initialize et
      $('[data-bs-toggle="popover"]').popover();
    });
  </script>
}
