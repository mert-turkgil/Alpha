@model BlogFilterViewModel

@{
    ViewData["Title"] = Model.BlogList_Title;
}

@section Css {
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">
    <style>
        /* Blog Page - Professional Styling */
        body {
            background: #f8f9fa;
        }

        /* Hero Section */
        .blog-hero {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .blog-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #e79c00 0%, #ff9900 50%, #e79c00 100%);
            z-index: 10;
        }

        .blog-hero h1 {
            font-size: 3.5rem;
            font-weight: 900;
            color: #1a1a1a;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 20px;
        }

        .blog-hero h1::after {
            content: '';
            display: block;
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #e79c00, #ff9900);
            margin: 20px auto 0;
            border-radius: 2px;
        }

        .blog-hero .lead {
            font-size: 1.2rem;
            color: #666;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.8;
        }

        /* Sidebar Styling */
        .blog-sidebar {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            border: 2px solid #f0f0f0;
            position: sticky;
            top: 20px;
        }

        .blog-sidebar h4 {
            color: #e79c00;
            font-weight: 800;
            font-size: 1.5rem;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .blog-sidebar .form-label {
            color: #666;
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        .blog-sidebar .form-control,
        .blog-sidebar .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .blog-sidebar .form-control:focus,
        .blog-sidebar .form-select:focus {
            border-color: #e79c00;
            box-shadow: 0 0 0 0.2rem rgba(231, 156, 0, 0.15);
        }

        .btn-blog-filter {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 14px 20px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }

        .btn-blog-filter:hover {
            background: linear-gradient(135deg, #20c997, #28a745);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(40, 167, 69, 0.4);
        }

        /* Blog Cards - Professional Design */
        .blog-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
            display: flex;
            flex-direction: column;
            border: 2px solid #f0f0f0;
            position: relative;
        }

        .blog-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #e79c00, #ff9900);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.4s ease;
            z-index: 1;
        }

        .blog-card:hover::before {
            transform: scaleX(1);
        }

        .blog-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 48px rgba(231, 156, 0, 0.25);
            border-color: #e79c00;
        }

        .blog-image-wrapper {
            position: relative;
            height: 240px;
            overflow: hidden;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

        .blog-card img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .blog-card:hover img {
            transform: scale(1.12);
        }

        .blog-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: linear-gradient(135deg, #e79c00, #ff9900);
            color: white;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.7rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            box-shadow: 0 4px 12px rgba(231, 156, 0, 0.4);
            z-index: 2;
        }

        .blog-card-body {
            padding: 28px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .blog-meta {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
            font-size: 0.85rem;
            color: #999;
        }

        .blog-meta i {
            color: #e79c00;
        }

        .blog-title {
            color: #1a1a1a;
            font-size: 1.4rem;
            font-weight: 800;
            margin-bottom: 16px;
            line-height: 1.3;
            transition: color 0.3s ease;
        }

        .blog-title a {
            color: inherit;
            text-decoration: none;
        }

        .blog-card:hover .blog-title {
            color: #e79c00;
        }

        .blog-content {
            color: #666;
            font-size: 0.95rem;
            line-height: 1.7;
            margin-bottom: 20px;
            flex-grow: 1;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .btn-blog-read {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            color: white;
            background: linear-gradient(135deg, #e79c00, #ff9900);
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-decoration: none;
            padding: 14px 28px;
            border-radius: 8px;
            transition: all 0.3s ease;
            align-self: stretch;
            text-align: center;
            box-shadow: 0 4px 12px rgba(231, 156, 0, 0.3);
        }

        .btn-blog-read:hover {
            background: linear-gradient(135deg, #ff9900, #e79c00);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(231, 156, 0, 0.4);
            color: white;
        }

        /* Pagination */
        .pagination {
            gap: 8px;
        }

        .pagination .page-item .page-link {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            color: #666;
            font-weight: 600;
            padding: 12px 18px;
            transition: all 0.3s ease;
        }

        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, #e79c00, #ff9900);
            border-color: #e79c00;
            color: white;
            box-shadow: 0 4px 12px rgba(231, 156, 0, 0.3);
        }

        .pagination .page-item:not(.active) .page-link:hover {
            background: #f8f9fa;
            border-color: #e79c00;
            color: #e79c00;
        }

        /* No Posts Message */
        .no-blogs {
            background: white;
            border-radius: 16px;
            padding: 60px 40px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        }

        .no-blogs h4 {
            color: #666;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .no-blogs i {
            font-size: 4rem;
            color: #e79c00;
            margin-bottom: 20px;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .blog-card {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

        .blog-card:nth-child(1) { animation-delay: 0.1s; }
        .blog-card:nth-child(2) { animation-delay: 0.2s; }
        .blog-card:nth-child(3) { animation-delay: 0.3s; }
        .blog-card:nth-child(4) { animation-delay: 0.4s; }
        .blog-card:nth-child(5) { animation-delay: 0.5s; }
        .blog-card:nth-child(6) { animation-delay: 0.6s; }

        /* Responsive */
        @@media (max-width: 768px) {
            .blog-hero h1 {
                font-size: 2.5rem;
            }

            .blog-hero .lead {
                font-size: 1.1rem;
            }

            .blog-sidebar {
                position: static;
                margin-bottom: 30px;
            }

            .blog-title {
                font-size: 1.2rem;
            }

            .blog-image-wrapper {
                height: 200px;
            }
        }
    </style>
}

<!-- Blog Header Section -->
<section class="blog-hero text-center" data-aos="fade-down">
    <div class="container">
        <h1>@Model.BlogList_Title</h1>
        <p class="lead">@Model.BlogList_Description</p>
    </div>
</section>

<!-- Main Content Section -->
<div class="container my-5">
    <div class="row">
        <!-- Filter Section -->
        <aside class="col-lg-3 mb-4" data-aos="fade-right">
            <div class="blog-sidebar">
                <h4>@Model.BlogList_SearchLabel</h4>
                <form method="get" action="@Url.Action("Blog", "Home")">
                    <!-- Category Filter -->
                    <div class="mb-3">
                        <label for="category" class="form-label">@Model.BlogList_AllCategories</label>
                        <select class="form-select" id="category" name="category">
                            <option value="All Categories">@Model.BlogList_AllCategories</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat" selected="@(cat == Model.Category ? "selected" : null)">
                                        @cat
                                    </option>
                                }
                        </select>
                    </div>

                    <!-- Brand Filter -->
                    <div class="mb-3">
                        <label for="brand" class="form-label">@Model.BlogList_BrandLabel</label>
                        <input type="text" class="form-control" id="brand" name="brand" value="@Model.Brand" placeholder="@Model.BlogList_BrandPlaceholder">
                    </div>

                    <!-- Search Filter -->
                    <div class="mb-3">
                        <label for="searchTerm" class="form-label">@Model.BlogList_SearchLabel</label>
                        <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" placeholder="@Model.BlogList_SearchLabel">
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-blog-filter w-100">@Model.BlogList_ApplyFiltersButton</button>
                </form>
            </div>
        </aside>

        <!-- Blog Content -->
        <div class="col-lg-9">
            <div class="row g-4">
                @if (Model.Blogs != null && Model.Blogs.Any())
                {
                    @foreach (var blog in Model.Blogs)
                    {
                        var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
                        var slug = blog?.Url?.ToLower() ?? "blog";
                        string imageUrl = !string.IsNullOrEmpty(blog?.Image)
                            ? Url.Content($"~/img/{blog.Image}")
                            : Url.Content("~/img/default-image.jpg");

                        <div class="col-lg-4 col-md-6">
                            <article class="blog-card">
                                <div class="blog-image-wrapper">
                                    <img src="@($"{imageUrl}?v={DateTime.UtcNow.Ticks}")"
                                         alt="@(string.IsNullOrWhiteSpace(blog?.Title) ? "Blog Post" : blog.Title)"
                                         loading="lazy"
                                         onerror="this.onerror=null;this.src='/img/default-image.jpg';" />
                                    <span class="blog-badge">
                                        <i class="fas fa-shield-alt"></i> SAFETY
                                    </span>
                                </div>

                                <div class="blog-card-body">
                                    <div class="blog-meta">
                                        <span>
                                            <i class="fa fa-calendar"></i> @blog!.Date.ToString("MMM dd, yyyy")
                                        </span>
                                        <span>
                                            <i class="fa fa-user"></i> @blog.Author
                                        </span>
                                    </div>

                                    @{
                                        var blogUrl = $"/{culture}/blog/{blog.BlogId}/{slug}";
                                    }

                                    <h5 class="blog-title">
                                        <a href="@blogUrl">
                                            @blog.Title
                                        </a>
                                    </h5>

                                    <div class="blog-content">
                                        @if (blog.Content.Length > 100)
                                        {
                                            @Html.Raw(Alpha.Services.HtmlUtility.GetExcerpt(blog.Content))
                                        }
                                        else
                                        {
                                            @Html.Raw(blog.Content)
                                        }
                                    </div>

                                    <a href="@blogUrl" class="btn-blog-read">
                                        <i class="fas fa-book-open"></i>
                                        @Model.BlogList_ReadMore
                                    </a>
                                </div>
                            </article>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="no-blogs">
                            <i class="fas fa-newspaper"></i>
                            <h4>@Model.BlogList_NoPostsMessage</h4>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <div class="row mt-5">
                <div class="col-12 d-flex justify-content-center">
                    <nav aria-label="Blog Pagination">
                        <ul class="pagination">
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Blog", new { page = i, category = Model.Category, brand = Model.Brand, searchTerm = Model.SearchTerm })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
@section Scripts {
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
}
