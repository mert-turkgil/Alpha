                    <label asp-for="UpperDE" class="form-label">Upper (DE)</label>
                    <textarea asp-for="UpperDE" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="UpperDE" class="text-danger"></span>

                    <label asp-for="LiningDE" class="form-label">Lining (DE)</label>
                    <textarea asp-for="LiningDE" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="LiningDE" class="text-danger"></span>

                    <label asp-for="ProtectionDE" class="form-label">Protection (DE)</label>
                    <textarea asp-for="ProtectionDE" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="ProtectionDE" class="text-danger"></span>

                    <label asp-for="MidsoleDE" class="form-label">Midsole (DE)</label>
                    <textarea asp-for="MidsoleDE" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="MidsoleDE" class="text-danger"></span>

                    <label asp-for="InsoleDE" class="form-label">Insole (DE)</label>
                    <textarea asp-for="InsoleDE" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="InsoleDE" class="text-danger"></span>

                    <label asp-for="SoleDE" class="form-label">Sole (DE)</label>
                    <textarea asp-for="SoleDE" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="SoleDE" class="text-danger"></span>

                    <hr>

                    @* TR *@
                    <h5>Turkish Translations (TR)</h5>
                    <label asp-for="DescriptionTR" class="form-label">Description (TR)</label>
                    <textarea asp-for="DescriptionTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="DescriptionTR" class="text-danger"></span>

                    <label asp-for="UpperTR" class="form-label">Upper (TR)</label>
                    <textarea asp-for="UpperTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="UpperTR" class="text-danger"></span>

                    <label asp-for="LiningTR" class="form-label">Lining (TR)</label>
                    <textarea asp-for="LiningTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="LiningTR" class="text-danger"></span>

                    <label asp-for="ProtectionTR" class="form-label">Protection (TR)</label>
                    <textarea asp-for="ProtectionTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="ProtectionTR" class="text-danger"></span>

                    <label asp-for="MidsoleTR" class="form-label">Midsole (TR)</label>
                    <textarea asp-for="MidsoleTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="MidsoleTR" class="text-danger"></span>

                    <label asp-for="InsoleTR" class="form-label">Insole (TR)</label>
                    <textarea asp-for="InsoleTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="InsoleTR" class="text-danger"></span>

                    <label asp-for="SoleTR" class="form-label">Sole (TR)</label>
                    <textarea asp-for="SoleTR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="SoleTR" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn submit-btn px-5">Save Product</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            let inputs = document.querySelectorAll('input');
            let hasEmptyField = false;

            inputs.forEach(input => {
                if (input.value.trim() === "") {
                    input.style.borderColor = "red";
                    hasEmptyField = true;
                } else {
                    input.style.borderColor = "";
                }
            });

            if (hasEmptyField) {
                e.preventDefault();
                alert("Please fill in all fields before submitting!");
            }
        });
    </script>
}
