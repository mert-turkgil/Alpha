                    <span asp-validation-for="MidsoleFR" class="text-danger"></span>

                    <label asp-for="InsoleFR" class="form-label">Insole (FR)</label>
                    <textarea asp-for="InsoleFR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="InsoleFR" class="text-danger"></span>

                    <label asp-for="SoleFR" class="form-label">Sole (FR)</label>
                    <textarea asp-for="SoleFR" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="SoleFR" class="text-danger"></span>

                    <hr>

                    @* US *@
                    <h5>US Translations</h5>
                    <label asp-for="DescriptionUS" class="form-label">Description (US)</label>
                    <textarea asp-for="DescriptionUS" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="DescriptionUS" class="text-danger"></span>

                    <label asp-for="UpperUS" class="form-label">Upper (US)</label>
                    <textarea asp-for="UpperUS" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="UpperUS" class="text-danger"></span>

                    <label asp-for="LiningUS" class="form-label">Lining (US)</label>
                    <textarea asp-for="LiningUS" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="LiningUS" class="text-danger"></span>

                    <label asp-for="ProtectionUS" class="form-label">Protection (US)</label>
                    <textarea asp-for="ProtectionUS" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="ProtectionUS" class="text-danger"></span>

                    <label asp-for="MidsoleUS" class="form-label">Midsole (US)</label>
                    <textarea asp-for="MidsoleUS" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="MidsoleUS" class="text-danger"></span>

