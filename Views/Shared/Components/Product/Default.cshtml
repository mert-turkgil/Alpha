@model Alpha.Models.ProductIndexViewModel

<style>
    .product-card-container {
        padding: 40px 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .product-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        background: #fff;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(231, 156, 0, 0.3);
    }

    .product-card-img-wrapper {
        position: relative;
        overflow: hidden;
        height: 280px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .product-card-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.6s ease;
    }

    .product-card:hover .product-card-img {
        transform: scale(1.1);
    }

    .product-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(231, 156, 0, 0.95);
        color: #fff;
        padding: 8px 16px;
        border-radius: 25px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .product-card-body {
        padding: 25px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        color: #e79c00;
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .product-brand {
        color: #666;
        font-size: 0.95rem;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .product-brand i {
        color: #e79c00;
    }

    .product-description {
        color: #777;
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 20px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .specs-table {
        margin-top: auto;
        border-collapse: separate;
        border-spacing: 0;
        overflow: hidden;
        border-radius: 10px;
        border: 2px solid #e79c00;
    }

    .specs-table tr:first-child td:first-child {
        border-top-left-radius: 8px;
    }

    .specs-table tr:first-child td:last-child {
        border-top-right-radius: 8px;
    }

    .specs-table tr:last-child td:first-child {
        border-bottom-left-radius: 8px;
    }

    .specs-table tr:last-child td:last-child {
        border-bottom-right-radius: 8px;
    }

    .specs-table td {
        padding: 12px 10px;
        font-size: 0.85rem;
        font-weight: 600;
        border: 1px solid #e8e8e8;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        color: #333;
        text-align: center;
        transition: all 0.3s ease;
    }

    .specs-table td:hover {
        background: linear-gradient(135deg, #fff9e6 0%, #ffe6b3 100%);
        color: #e79c00;
        transform: scale(1.05);
    }

    .specs-table tr:nth-child(odd) td {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .product-card-footer {
        padding: 15px 25px;
        background: linear-gradient(135deg, #e79c00 0%, #ff9900 100%);
        color: #fff;
        font-weight: 700;
        text-align: center;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .product-card-footer i {
        font-size: 1.1rem;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .section-subtitle {
        color: #e79c00;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 2px;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .section-divider {
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #e79c00 0%, #ff9900 100%);
        margin: 0 auto;
        border-radius: 2px;
    }

    @@media (max-width: 768px) {
        .product-title {
            font-size: 1.2rem;
        }

        .section-title {
            font-size: 2rem;
        }
    }
</style>

<div class="product-card-container">
    <div class="container-xxl">
        <div class="section-header">
            <div class="section-subtitle">@Model.StatusMessage</div>
            <h2 class="section-title">@Model.ProductHead</h2>
            <div class="section-divider"></div>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4">

            @if (!Model.Products.Any())
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>No products available.
                    </div>
                </div>
            }
            else
            {
                @foreach (var product in Model.Products)
                {
                    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
                    var slug = product?.Url?.ToLower() ?? "urun";
                    string imageUrl = (product?.ProductImages != null && product.ProductImages.Any())
                        ? product.ProductImages.FirstOrDefault()?.Image.ImageUrl ?? "/img/default-image.jpg"
                        : "/img/default-image.jpg";

                    <div class="col">
                        <a asp-controller="Home" 
                           asp-action="ProductDetail"
                           asp-route-culture="@culture"
                           asp-route-id="@product!.ProductId"
                           asp-route-slug="@slug"
                           class="text-decoration-none">
                            <div class="product-card">
                                <div class="product-card-img-wrapper">
                                    <img src="@($"{imageUrl}?v={DateTime.UtcNow.Ticks}")"
                                         class="product-card-img"
                                         alt="@(string.IsNullOrWhiteSpace(product?.Name) ? "Safety Shoe" : product.Name)"
                                         loading="lazy"
                                         onerror="this.onerror=null;this.src='https://via.placeholder.com/600x400?text=Image+Unavailable';">
                                    <span class="product-badge">
                                        <i class="fas fa-shield-alt"></i> Safety
                                    </span>
                                </div>

                                <div class="product-card-body">
                                    <h5 class="product-title">@(string.IsNullOrWhiteSpace(product?.Name) ? "Safety Shoe" : product.Name)</h5>
                                    
                                    <div class="product-brand">
                                        <i class="fas fa-industry"></i>
                                        @(string.IsNullOrWhiteSpace(product?.Brand) ? "Alpha" : product.Brand)
                                    </div>

                                    <p class="product-description">
                                        @(string.IsNullOrWhiteSpace(product?.Description) ? "High-quality safety footwear designed for maximum protection." : product.Description)
                                    </p>

                                    <table class="specs-table w-100">
                                        <tr>
                                            <td title="Protection">
                                                <i class="fas fa-hard-hat text-warning me-1"></i>
                                                @(string.IsNullOrWhiteSpace(product?.Protection) ? "Protection" : product.Protection)
                                            </td>
                                            <td title="Lining">
                                                <i class="fas fa-layer-group text-info me-1"></i>
                                                @(string.IsNullOrWhiteSpace(product?.Lining) ? "Lining" : product.Lining)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td title="Sole">
                                                <i class="fas fa-shoe-prints text-success me-1"></i>
                                                @(string.IsNullOrWhiteSpace(product?.Sole) ? "Sole" : product.Sole)
                                            </td>
                                            <td title="Upper">
                                                <i class="fas fa-arrow-up text-primary me-1"></i>
                                                @(string.IsNullOrWhiteSpace(product?.Upper) ? "Upper" : product.Upper)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td title="Midsole">
                                                <i class="fas fa-compress text-secondary me-1"></i>
                                                @(string.IsNullOrWhiteSpace(product?.Midsole) ? "Midsole" : product.Midsole)
                                            </td>
                                            <td title="Insole">
                                                <i class="fas fa-certificate text-danger me-1"></i>
                                                @(string.IsNullOrWhiteSpace(product?.Insole) ? "Insole" : product.Insole)
                                            </td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="product-card-footer">
                                    <i class="fas fa-award"></i>
                                    @(string.IsNullOrWhiteSpace(product?.Certificate) ? "CE Certified" : product.Certificate)
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div> 
