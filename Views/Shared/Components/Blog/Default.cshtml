@model List<Alpha.Models.BlogIndexModel>
@using System.Globalization

@{
    ViewData["Title"] = "Blogs";
}

    <style>
        /* Blog Section - Clean White Background */
        .blog-section {
            padding: 80px 0;
            background: white;
            position: relative;
        }

        .blog-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #e79c00 0%, #ff9900 50%, #e79c00 100%);
            z-index: 10;
        }

        .blog-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Blog Header - Improved */
        .blog-header {
            text-align: center;
            margin-bottom: 70px;
            padding: 0 20px;
        }

        .blog-subtitle {
            color: #e79c00;
            text-transform: uppercase;
            font-weight: 800;
            letter-spacing: 4px;
            font-size: 1rem;
            margin-bottom: 20px;
            display: block;
            position: relative;
        }

        .blog-subtitle::after {
            content: '';
            display: block;
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #e79c00, #ff9900);
            margin: 15px auto 0;
            border-radius: 2px;
        }

        .blog-title {
            font-size: 3.5rem;
            font-weight: 900;
            color: #1a1a1a;
            text-transform: uppercase;
            margin: 0 0 20px 0;
            letter-spacing: 2px;
            line-height: 1.2;
        }

        .blog-description {
            font-size: 1.1rem;
            color: #666;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.8;
            font-weight: 400;
        }

        /* Blog Grid - Proper Card Layout */
        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 35px;
            margin: 0;
        }

        /* Blog Card - Elevated Card Design */
        .blog-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
            display: flex;
            flex-direction: column;
            border: 2px solid #f0f0f0;
            position: relative;
        }

        .blog-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #e79c00, #ff9900);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.4s ease;
        }

        .blog-card:hover::before {
            transform: scaleX(1);
        }

        .blog-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 48px rgba(231, 156, 0, 0.25);
            border-color: #e79c00;
        }

        /* Blog Image Section */
        .blog-image-container {
            position: relative;
            height: 260px;
            overflow: hidden;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

        .blog-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .blog-card:hover .blog-image {
            transform: scale(1.12);
        }

        .blog-image-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.7) 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .blog-card:hover .blog-image-overlay {
            opacity: 1;
        }

        /* Blog Badge */
        .blog-category-badge {
            position: absolute;
            top: 18px;
            left: 18px;
            background: linear-gradient(135deg, #e79c00, #ff9900);
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            font-size: 0.7rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            box-shadow: 0 4px 12px rgba(231, 156, 0, 0.4);
            z-index: 3;
        }

        /* Blog Content Section */
        .blog-content-area {
            padding: 32px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            background: white;
        }

        .blog-article-title {
            color: #1a1a1a;
            font-size: 1.5rem;
            font-weight: 800;
            margin-bottom: 16px;
            line-height: 1.3;
            min-height: 62px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: color 0.3s ease;
        }

        .blog-card:hover .blog-article-title {
            color: #e79c00;
        }

        .blog-excerpt {
            color: #666;
            font-size: 1rem;
            line-height: 1.8;
            margin-bottom: 24px;
            flex-grow: 1;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .blog-meta {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

        .blog-meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #999;
            font-size: 0.85rem;
        }

        .blog-meta-item i {
            color: #e79c00;
        }

        /* Blog Action Button */
        .blog-action-link {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            color: white;
            background: linear-gradient(135deg, #e79c00, #ff9900);
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-decoration: none;
            padding: 14px 28px;
            border-radius: 8px;
            transition: all 0.3s ease;
            align-self: flex-start;
            box-shadow: 0 4px 12px rgba(231, 156, 0, 0.3);
        }

        .blog-action-link:hover {
            background: linear-gradient(135deg, #ff9900, #e79c00);
            transform: translateX(5px);
            box-shadow: 0 6px 16px rgba(231, 156, 0, 0.4);
        }

        .blog-action-link i {
            transition: transform 0.3s ease;
            font-size: 0.85rem;
        }

        .blog-card:hover .blog-action-link i {
            transform: translateX(5px);
        }

        /* Animation */
        @@keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.95) translateY(20px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .blog-card {
            animation: fadeInScale 0.6s ease forwards;
            opacity: 0;
        }

        .blog-card:nth-child(1) { animation-delay: 0.1s; }
        .blog-card:nth-child(2) { animation-delay: 0.2s; }
        .blog-card:nth-child(3) { animation-delay: 0.3s; }
        .blog-card:nth-child(4) { animation-delay: 0.4s; }
        .blog-card:nth-child(5) { animation-delay: 0.5s; }
        .blog-card:nth-child(6) { animation-delay: 0.6s; }
        .blog-card:nth-child(7) { animation-delay: 0.7s; }
        .blog-card:nth-child(8) { animation-delay: 0.8s; }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .blog-grid {
                grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
                gap: 28px;
            }
        }

        @@media (max-width: 768px) {
            .blog-section {
                padding: 60px 0;
            }

            .blog-title {
                font-size: 2.5rem;
            }

            .blog-description {
                font-size: 1rem;
            }

            .blog-grid {
                grid-template-columns: 1fr;
                gap: 25px;
            }

            .blog-image-container {
                height: 220px;
            }

            .blog-content-area {
                padding: 26px;
            }

            .blog-article-title {
                font-size: 1.3rem;
                min-height: auto;
            }
        }

        @@media (max-width: 576px) {
            .blog-section {
                padding: 50px 0;
            }

            .blog-title {
                font-size: 2rem;
            }

            .blog-subtitle {
                font-size: 0.85rem;
                letter-spacing: 3px;
            }

            .blog-header {
                margin-bottom: 50px;
            }

            .blog-category-badge {
                top: 15px;
                left: 15px;
                padding: 8px 14px;
                font-size: 0.65rem;
            }

            .blog-action-link {
                padding: 12px 22px;
                font-size: 0.85rem;
            }

            .blog-meta {
                flex-direction: column;
                align-items: flex-start;
                gap: 8px;
            }
        }
    </style>


<div class="blog-section">
    <div class="blog-container">
        <!-- Enhanced Header with Subtitle and Description -->
        <div class="blog-header">
            <div class="blog-subtitle">@ViewBag.Message</div>
            <h2 class="blog-title">@ViewBag.Head</h2>
            <p class="blog-description">
                Discover the latest safety standards, product innovations, and industry insights for workplace protection equipment.
            </p>
        </div>

        <!-- Blog Cards Grid -->
        <div class="blog-grid">
            @foreach (var blogModel in Model)
            {
                var culture = CultureInfo.CurrentCulture.Name;
                var culturee = System.Globalization.CultureInfo.CurrentUICulture.Name;
                foreach (var blogData in blogModel.Blogs ?? new List<Alpha.Entity.Blog>())
                {
                    var slug = blogData.Url?.ToLower() ?? "blog";
                    string localizedTitle = blogModel.GetTitleByCulture(culture) ?? blogData.Title;
                    string localizedContent = blogModel.GetContentByCulture(culture) ?? string.Empty;
                    string snippet = Html.Raw(localizedContent).ToString() ?? string.Empty;
                    snippet = System.Text.RegularExpressions.Regex.Replace(snippet, "<.*?>", string.Empty);

                    snippet = snippet.Length > 150 ? snippet.Substring(0, 150) + "..." : snippet;

                    string imageUrl = !string.IsNullOrEmpty(blogData.Image)
                        ? Url.Content($"~/img/{blogData.Image}")
                        : Url.Content("~/img/default-image.jpg");

                    <a asp-controller="Home"
                       asp-action="BlogDetails"
                       asp-route-culture="@culturee"
                       asp-route-id="@blogData.BlogId"
                       asp-route-slug="@slug"
                       class="text-decoration-none">
                        <article class="blog-card">
                            <div class="blog-image-container">
                                <img src="@imageUrl" 
                                     alt="@localizedTitle" 
                                     class="blog-image" 
                                     loading="lazy" />
                                <div class="blog-image-overlay"></div>
                                <span class="blog-category-badge">
                                    <i class="fas fa-shield-alt"></i> SAFETY
                                </span>
                            </div>

                            <div class="blog-content-area">
                                <div class="blog-meta">
                                    <span class="blog-meta-item">
                                        <i class="fas fa-clock"></i> 5 min read
                                    </span>
                                    <span class="blog-meta-item">
                                        <i class="fas fa-tag"></i> Industry News
                                    </span>
                                </div>

                                <h3 class="blog-article-title">@localizedTitle</h3>
                                <p class="blog-excerpt">@snippet</p>
                                
                                <span class="blog-action-link">
                                    Read Full Article <i class="fas fa-arrow-right"></i>
                                </span>
                            </div>
                        </article>
                    </a>
                }
            }
        </div>
    </div>
</div>

