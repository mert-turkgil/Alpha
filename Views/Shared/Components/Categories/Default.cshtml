@using System.Globalization
@model CategoryGridViewModel

<style>
    .category-section {
        padding: 60px 20px;
        background: white;
        position: relative;
    }

    .category-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #e79c00 0%, #ff9900 50%, #e79c00 100%);
    }

    .category-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .category-subtitle {
        color: #e79c00;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 2px;
        font-size: 0.9rem;
        margin-bottom: 10px;
        display: inline-block;
        position: relative;
    }

    .category-subtitle::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 2px;
        background: #e79c00;
    }

    .category-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #2c3e50;
        text-transform: uppercase;
        margin-top: 15px;
    }

    .category-card-wrapper {
        padding: 15px;
        height: 100%;
    }

    .category-card {
        position: relative;
        height: 100%;
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
        display: flex;
        flex-direction: column;
    }

    .category-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(231, 156, 0, 0.1) 0%, rgba(255, 153, 0, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
    }

    .category-card:hover::before {
        opacity: 1;
    }

    .category-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 40px rgba(231, 156, 0, 0.25);
    }

    .category-img-wrapper {
        position: relative;
        overflow: hidden;
        padding: 30px;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 200px;
    }

    .category-img {
        width: 100%;
        height: 180px;
        object-fit: contain;
        transition: transform 0.6s ease;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
        z-index: 2;
        position: relative;
    }

    .category-card:hover .category-img {
        transform: scale(1.15) rotate(3deg);
    }

    .category-icon-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120px;
        height: 120px;
        background: radial-gradient(circle, rgba(231, 156, 0, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        z-index: 0;
    }

    .category-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: linear-gradient(135deg, #e79c00 0%, #ff9900 100%);
        color: #fff;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 10px rgba(231, 156, 0, 0.3);
        z-index: 3;
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.3s ease;
    }

    .category-card:hover .category-badge {
        opacity: 1;
        transform: translateY(0);
    }

    .category-footer {
        padding: 25px 20px;
        background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
        text-align: center;
        position: relative;
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-top: 2px solid #e79c00;
    }

    .category-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: color 0.3s ease;
        position: relative;
        display: inline-block;
    }

    .category-name::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, #e79c00 0%, #ff9900 100%);
        transition: width 0.4s ease;
        border-radius: 2px;
    }

    .category-card:hover .category-name {
        color: #e79c00;
    }

    .category-card:hover .category-name::after {
        width: 60%;
    }

    .category-arrow {
        position: absolute;
        bottom: 10px;
        right: 15px;
        color: #e79c00;
        font-size: 1.2rem;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s ease;
    }

    .category-card:hover .category-arrow {
        opacity: 1;
        transform: translateX(0);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .category-title {
            font-size: 2rem;
        }

        .category-img-wrapper {
            min-height: 150px;
            padding: 20px;
        }

        .category-img {
            height: 140px;
        }

        .category-footer {
            padding: 20px 15px;
        }

        .category-name {
            font-size: 1rem;
        }
    }

    @@media (max-width: 576px) {
        .category-section {
            padding: 40px 15px;
        }

        .category-title {
            font-size: 1.6rem;
        }
    }

    /* Loading Animation */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .category-card-wrapper {
        animation: fadeInUp 0.6s ease forwards;
        opacity: 0;
    }

    .category-card-wrapper:nth-child(1) { animation-delay: 0.1s; }
    .category-card-wrapper:nth-child(2) { animation-delay: 0.2s; }
    .category-card-wrapper:nth-child(3) { animation-delay: 0.3s; }
    .category-card-wrapper:nth-child(4) { animation-delay: 0.4s; }
    .category-card-wrapper:nth-child(5) { animation-delay: 0.5s; }
    .category-card-wrapper:nth-child(6) { animation-delay: 0.6s; }
    .category-card-wrapper:nth-child(7) { animation-delay: 0.7s; }
    .category-card-wrapper:nth-child(8) { animation-delay: 0.8s; }
</style>

<div class="category-section">
    <div class="container-xxl">
        <div class="category-header">
            <div class="category-subtitle">@ViewBag.Message</div>
            <h2 class="category-title">@ViewBag.Body</h2>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5">
            @foreach (var category in Model.Categories)
            {
                var culture = CultureInfo.CurrentUICulture.Name;
                
                <div class="col">
                    <div class="category-card-wrapper">
                        <div class="category-card" onclick="window.location.href='@Url.Action("Services", "Home", new { culture = culture, category = category.Url })'">
                            <div class="category-badge">
                                <i class="fas fa-star me-1"></i>Category
                            </div>
                            
                            <div class="category-img-wrapper">
                                <div class="category-icon-bg"></div>
                                <img src="~/img/@category.ImageUrl" 
                                     onerror="this.onerror=null; this.src='https://via.placeholder.com/200x200?text=@category.Name';" 
                                     alt="@category.Name" 
                                     class="category-img" />
                            </div>

                            <div class="category-footer">
                                <h6 class="category-name">@category.Name</h6>
                                <i class="fas fa-arrow-right category-arrow"></i>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
