@using Alpha.Services
@using System.Globalization
<!-- Footer Section -->
<div class="container-fluid footer-container">
    <div class="row text-center">

        <!-- Column 1: Quick Links -->
        <div class="col-md-4">
            @{
                var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
                var homeUrl = $"/{culture}";
                var servicesUrl = $"/{culture}/{RouteTranslationService.GetRoute("services", culture)}";
                var contactUrl = $"/{culture}/{RouteTranslationService.GetRoute("contact", culture)}";
                var blogUrl = $"/{culture}/blog";
                var privacyUrl = $"/{culture}/{RouteTranslationService.GetRoute("privacy", culture)}";
                var isActive = string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "Services", StringComparison.OrdinalIgnoreCase);
                var isActiveBlog = string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "Blog", StringComparison.OrdinalIgnoreCase);
            }
            <h3 class="footer-heading">@Model.QuickLinks</h3>
            <a href="@homeUrl" class="footer-link">@Model.Home</a><br />
            <a href="@servicesUrl" class="footer-link fw-semibold @(isActive ? "active" : "")">
                @Model.Services
            </a>
            <br />
            <a href="@contactUrl" class="footer-link">@Model.Contact</a><br />
            <a href="@blogUrl" class="footer-link fw-semibold @(isActiveBlog ? "active" : "")">
                @Model.Blog
            </a>
        </div>

        <!-- Column 2: Employee Login -->
        <div class="col-md-4">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <h3 class="footer-heading">@Model.footerHeader</h3>
                 <p>@Model.footerBody</p>
                <a asp-action="Dashboard" asp-controller="Admin" class="footer-btn">
                    @(User.Identity.Name ?? "User") <i class="fa-solid fa-arrow-right fa-beat-fade"></i> Dashboard
                </a>
            }
            else
            {
            <h3 class="footer-heading">@Model.footerHeader</h3>
            <p>@Model.footerBody</p>
                <a asp-action="Login" asp-controller="Admin" class="footer-btn">@Model.footerHeader</a>
            }

   
        </div>

        <!-- Column 3: Social Media -->
        <div class="col-md-4">
            <h3 class="footer-heading">@Model.Follow</h3>
            <div class="socialContainer">
                <a href="#" class="text-white"><i class="fa-brands fa-square-x-twitter fa-2xl"></i></a>
                <a href="https://www.instagram.com/alphasafetyshoes/" class="text-white"><i class="fa-brands fa-square-instagram fa-2xl"></i></a>
                <a href="#" class="text-white"><i class="fa-brands fa-square-whatsapp fa-2xl"></i></a>
                <a href="#" class="text-white"><i class="fa-brands fa-linkedin fa-2xl"></i></a>
            </div>
        </div>
    </div>

    <!-- Bottom Row: Google Map -->
    <div class="row mt-4">
        <div class="col map-container">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d188.47974544133035!2d29.2071279563417!3d40.900923193458425!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1745714752361!5m2!1str!2str"
                loading="lazy" allowfullscreen></iframe>
        </div>
    </div>

    <!-- Copyright Row -->
    <div class="row mt-4 text-center">
        <div class="col">
            <p>&copy; 2024 Alpha Company | <a href="@privacyUrl" class="footer-link">@Model.Privacy </a></p>
        </div>
    </div>
</div>
